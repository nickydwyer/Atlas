# Staging Environment Configuration Template
# Copy this file to .env.staging and fill in your staging values

# LLM Provider API Keys (Staging Keys)
OPENAI_API_KEY=your_staging_openai_api_key_here
ANTHROPIC_API_KEY=your_staging_anthropic_api_key_here
GEMINI_API_KEY=your_staging_gemini_api_key_here

# Default Settings for Staging
DEFAULT_LLM_PROVIDER=anthropic
DEFAULT_LLM_MODEL=claude-sonnet-4-20250514
DEFAULT_ANALYSIS_CONTEXT=legacy

# Ollama Configuration (Staging Server)
OLLAMA_BASE_URL=http://staging-ollama:11434

# Neo4j Configuration (Staging Database)
NEO4J_URI=bolt://staging-neo4j:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_staging_neo4j_password_here

# Neo4j MCP Server Configuration
LOCAL_NEO4J_MCP_SERVER_PATH=

# Staging MCP Server Environment Variables
# Example for app-mod-neo4j server:
# APP_MOD_NEO4J_URI=neo4j://staging-neo4j:7688
# APP_MOD_NEO4J_USERNAME=neo4j
# APP_MOD_NEO4J_PASSWORD=your_staging_app_mod_password

# Example for web search server:
# WEB_SEARCH_API_KEY=your_staging_web_search_api_key

# Example for GitHub server:
# GITHUB_TOKEN=your_staging_github_token

# Example for filesystem server:
# MCP_FILESYSTEM_ALLOWED_PATHS=./staging_data,/app/staging_files

# Atlas Configuration (Staging)
ATLAS_LOG_LEVEL=INFO
ATLAS_OUTPUT_DIR=./staging_output

# LangChain and LangSmith Tracing (Staging)
LANGSMITH_TRACING=true
LANGCHAIN_TRACING_V2=true
LANGSMITH_PROJECT=atlas_staging
LANGSMITH_API_KEY=your_staging_langsmith_api_key_here
LANGSMITH_ENDPOINT=https://api.langsmith.com

# Set environment indicator
ATLAS_ENV=staging