# Production Environment Configuration Template
# Copy this file to .env.prod and fill in your production values

# LLM Provider API Keys (Production Keys)
OPENAI_API_KEY=your_prod_openai_api_key_here
ANTHROPIC_API_KEY=your_prod_anthropic_api_key_here
GEMINI_API_KEY=your_prod_gemini_api_key_here

# Default Settings for Production
DEFAULT_LLM_PROVIDER=anthropic
DEFAULT_LLM_MODEL=claude-sonnet-4-20250514
DEFAULT_ANALYSIS_CONTEXT=oracle

# Ollama Configuration (Production Server)
OLLAMA_BASE_URL=http://prod-ollama:11434

# Neo4j Configuration (Production Database)
NEO4J_URI=bolt://prod-neo4j:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_prod_neo4j_password_here

# Neo4j MCP Server Configuration
LOCAL_NEO4J_MCP_SERVER_PATH=

# Production MCP Server Environment Variables
# Example for app-mod-neo4j server:
# APP_MOD_NEO4J_URI=neo4j://prod-neo4j:7688
# APP_MOD_NEO4J_USERNAME=neo4j
# APP_MOD_NEO4J_PASSWORD=your_prod_app_mod_password

# Example for web search server:
# WEB_SEARCH_API_KEY=your_prod_web_search_api_key

# Example for GitHub server:
# GITHUB_TOKEN=your_prod_github_token

# Example for filesystem server:
# MCP_FILESYSTEM_ALLOWED_PATHS=./prod_data,/app/production_files

# Atlas Configuration (Production)
ATLAS_LOG_LEVEL=WARNING
ATLAS_OUTPUT_DIR=./production_output

# LangChain and LangSmith Tracing (Production - typically disabled or limited)
LANGSMITH_TRACING=false
LANGCHAIN_TRACING_V2=false
LANGSMITH_PROJECT=atlas_production
LANGSMITH_API_KEY=your_prod_langsmith_api_key_here
LANGSMITH_ENDPOINT=https://api.langsmith.com

# Set environment indicator
ATLAS_ENV=production