# Development Environment Configuration Template
# Copy this file to .env.dev and fill in your development values

# LLM Provider API Keys (Development/Test Keys)
OPENAI_API_KEY=your_dev_openai_api_key_here
ANTHROPIC_API_KEY=your_dev_anthropic_api_key_here
GEMINI_API_KEY=your_dev_gemini_api_key_here

# Default Settings for Development
DEFAULT_LLM_PROVIDER=openai
DEFAULT_LLM_MODEL=gpt-4o-mini
DEFAULT_ANALYSIS_CONTEXT=legacy

# Ollama Configuration (Local Development)
OLLAMA_BASE_URL=http://localhost:11434

# Neo4j Configuration (Local Development)
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_dev_neo4j_password_here

# Neo4j MCP Server Configuration
LOCAL_NEO4J_MCP_SERVER_PATH=

# Development MCP Server Environment Variables
# Example for app-mod-neo4j server:
# APP_MOD_NEO4J_URI=neo4j://localhost:7688
# APP_MOD_NEO4J_USERNAME=neo4j
# APP_MOD_NEO4J_PASSWORD=your_dev_app_mod_password

# Example for web search server:
# WEB_SEARCH_API_KEY=your_dev_web_search_api_key

# Example for GitHub server:
# GITHUB_TOKEN=your_dev_github_token

# Example for filesystem server:
# MCP_FILESYSTEM_ALLOWED_PATHS=./,/tmp,/path/to/dev/directory

# Atlas Configuration (Development)
ATLAS_LOG_LEVEL=DEBUG
ATLAS_OUTPUT_DIR=./dev_output

# LangChain and LangSmith Tracing (Development)
LANGSMITH_TRACING=true
LANGCHAIN_TRACING_V2=true
LANGSMITH_PROJECT=atlas_dev
LANGSMITH_API_KEY=your_dev_langsmith_api_key_here
LANGSMITH_ENDPOINT=https://api.langsmith.com

# Set environment indicator
ATLAS_ENV=development